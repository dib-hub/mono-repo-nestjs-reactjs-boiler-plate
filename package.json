{
  "name": "monorepo-template",
  "version": "1.0.0",
  "description": "Full-stack NX monorepo with NestJS API, React frontend, Prisma ORM, and shared types",
  "license": "MIT",
  "scripts": {
    "start": "pnpm run start:api",
    "start:api": "npx nx serve api",
    "start:web": "pnpm -C apps/web run dev",
    "dev": "concurrently --names api,web --prefix-colors blue,green \"pnpm run start:api\" \"pnpm run start:web\"",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "nx": "nx",
    "db:generate": "pnpm -C libs/repository exec prisma generate --schema=prisma/schema.prisma",
    "db:migrate": "pnpm -C libs/repository exec prisma migrate dev --schema=prisma/schema.prisma",
    "db:deploy": "pnpm -C libs/repository exec prisma migrate deploy --schema=prisma/schema.prisma",
    "db:studio": "pnpm -C libs/repository exec prisma studio --schema=prisma/schema.prisma",
    "db:seed": "pnpm -C libs/repository exec node --loader ts-node/esm --experimental-specifier-resolution=node -r dotenv/config prisma/seed.ts",
    "db:reset": "pnpm -C libs/repository exec prisma migrate reset --force --schema=prisma/schema.prisma",
    "graph": "nx graph"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@nx/eslint": "^17.3.0",
    "@nx/eslint-plugin": "^17.3.0",
    "@nx/jest": "^17.3.0",
    "@nx/nest": "^17.3.0",
    "@nx/react": "^17.3.0",
    "@nx/vite": "^17.3.0",
    "@nx/webpack": "^17.3.0",
    "@nx/node": "^17.3.0",
    "@nrwl/node": "^17.3.0",
    "@nx/workspace": "^17.3.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nx": "^17.3.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prisma": "^7.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
